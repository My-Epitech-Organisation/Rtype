{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19
  },
  "configurePresets": [
    {
      "name": "vcpkg-base",
      "hidden": true,
      "toolchainFile": "${sourceDir}/cmake/vcpkg-toolchain.cmake",
      "cacheVariables": {
        "VCPKG_MANIFEST_MODE": "ON",
        "VCPKG_LIBRARY_LINKAGE": "static"
      }
    },
    {
      "name": "base",
      "hidden": true,
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "windows-debug",
      "displayName": "Windows Debug",
      "description": "Build Debug pour Windows avec MSVC (cl.exe)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "windows-release",
      "displayName": "Windows Release",
      "description": "Build Release pour Windows avec MSVC (cl.exe)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "BUILD_GRAPHICAL_TESTS": "OFF"
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "BUILD_GRAPHICAL_TESTS": "OFF",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    },
    {
      "name": "cpm-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-cpm",
      "description": "CPM-only base: intentionally does not load the vcpkg toolchain.",
      "cacheVariables": {
        "RTYPE_FORCE_CPM": "ON"
      }
    },
    {
      "name": "linux-release-cpm",
      "displayName": "Linux Release (CPM)",
      "description": "Pure CPM build: no vcpkg toolchain loaded; uses build-cpm/.",
      "inherits": "cpm-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_GRAPHICAL_TESTS": "OFF"
      }
    },
    {
      "name": "linux-debug-cpm",
      "displayName": "Linux Debug (CPM)",
      "description": "Pure CPM build: no vcpkg toolchain loaded; uses build-cpm/.",
      "inherits": "cpm-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "window-linux-debug",
      "displayName": "Windows (MinGW) on Linux",
      "description": "Cross-compilation pour Windows depuis Linux via MinGW",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_SYSTEM_NAME": "Windows",
        "VCPKG_TARGET_TRIPLET": "x64-mingw-dynamic",
        "VCPKG_HOST_TRIPLET": "x64-linux",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchain-mingw.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release"
    },
    {
      "name": "linux-debug-cpm",
      "configurePreset": "linux-debug-cpm"
    },
    {
      "name": "linux-release-cpm",
      "configurePreset": "linux-release-cpm"
    },
    {
      "name": "windows-debug",
      "configurePreset": "windows-debug"
    },
    {
      "name": "windows-release",
      "configurePreset": "windows-release"
    },
    {
      "name": "window-linux-debug",
      "configurePreset": "window-linux-debug"
    }
  ]
}
