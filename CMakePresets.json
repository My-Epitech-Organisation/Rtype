{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "windows-debug",
      "displayName": "Windows Debug",
      "description": "Build Debug pour Windows avec MSVC",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "/D_CRT_SECURE_NO_WARNINGS",
        "CMAKE_C_FLAGS": "/D_CRT_SECURE_NO_WARNINGS"
      }
    },
    {
      "name": "windows-latest",
      "displayName": "Windows Release",
      "description": "Build Release pour Windows avec MSVC",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "/D_CRT_SECURE_NO_WARNINGS",
        "CMAKE_C_FLAGS": "/D_CRT_SECURE_NO_WARNINGS"
      }
    },
    {
      "name": "ubuntu-debug",
      "displayName": "Linux Debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "ubuntu-latest",
      "displayName": "Linux Release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "g++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ubuntu-debug",
      "configurePreset": "ubuntu-debug"
    },
    {
      "name": "ubuntu-latest",
      "configurePreset": "ubuntu-latest"
    },
    {
      "name": "windows-debug",
      "configurePreset": "windows-debug"
    },
    {
      "name": "windows-latest",
      "configurePreset": "windows-latest"
    }
  ]
}